&GLOBAL
   PRINT_LEVEL LOW
   WALLTIME 2682000
   PROJECT H2O
   RUN_TYPE DRIVER
   SEED 1
&END GLOBAL

&MOTION

  &DRIVER
   HOST localhost
   PORT port
  &END DRIVER
&END MOTION

&FORCE_EVAL
  METHOD Quickstep

  &DFT
    WFN_RESTART_FILE_NAME H2O-RESTART.wfn
    
    BASIS_SET_FILE_NAME ./basis/GTH_BASIS_SETS
    POTENTIAL_FILE_NAME ./basis/GTH_POTENTIALS
    
    &MGRID
      CUTOFF 250
    &END MGRID
       
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 5.e-7
      MAX_SCF 20
      &OT
   	MINIMIZER DIIS
        N_DIIS 7
        PRECONDITIONER FULL_ALL
      &END OT

       &OUTER_SCF
   	 TYPE NONE
	    OPTIMIZER NONE
	    EPS_SCF 5.0E-7
       MAX_SCF 25

       &END OUTER_SCF 
    &END SCF
    
    &XC
     &XC_FUNCTIONAL BLYP
     &END XC_FUNCTIONAL
     &XC_GRID
       XC_DERIV SPLINE2
     &END XC_GRID
    &END XC
  &END DFT
  STRESS_TENSOR DIAGONAL_ANALYTICAL

  &SUBSYS
    &CELL
      ABC 8 8 8 
    &END CELL

    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q1
      ELEMENT H
    &END KIND

    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND

    &COORD
O 1.8374 3.36775 12.3092
H 2.9612 4.19864 11.1874
H 1.56927 4.83071 13.4077
    &END COORD

   &END SUBSYS
&END FORCE_EVAL

